@inject Microsoft.Extensions.Localization.IStringLocalizer<BuildingStatus> L
@page "/buildingstatus/{buildingId}"





<PageTitle>@Building?.Name</PageTitle>


<RadzenText Text="@Building?.Name" TagName="TagName.Auto" TextStyle="TextStyle.Subtitle1"/>


<RadzenRow Gap="0" RowGap="15">
    <RadzenColumn Size="12">
        <RadzenRow>
            <RadzenPanel Style="width: 100%">
                <RadzenRow Gap=10 RowGap="10">
                    @if (Building != null)
                    {
                        foreach (var room in Building.Rooms)
                        {
                            <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="4">
                                <RadzenCard>
                                    <RadzenRow>
                                        <RadzenColumn SizeLG="3" Style="display: table; text-align: center">
                                        <RadzenIcon Icon="crop_3_2" Style="font-size: 48px; height: 48px; width: 48px; color: #990000"></RadzenIcon>
                                            <RadzenText Text="@room.Number" TextStyle="TextStyle.Subtitle1" TagName="TagName.H3"></RadzenText>
                                        </RadzenColumn>
                                        <RadzenColumn SizeLG="9">
                                            <RadzenRow RowGap="5" >
                                                <RadzenColumn Size="1">
                                                    <RadzenIcon Icon="fiber_manual_record" IconStyle="IconStyle.Primary" Style="float: none; height: 16px; width: 16px; display: grid" class="@GetState(GetDevice(room, "T"))"></RadzenIcon>
                                                </RadzenColumn>
                                                <RadzenColumn Size="7">
                                                    <RadzenText Text="Temperature" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn >
                                                <RadzenColumn Size="4">
                                                    <RadzenText Text="@GetDevice(room, "T").Value" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn>
                                            </RadzenRow>
                                            <RadzenRow>
                                                <RadzenColumn Size="1">
                                                    <RadzenIcon Icon="fiber_manual_record" IconStyle="IconStyle.Primary" Style="display: grid; float: none; height: 16px; width: 16px" class="@GetState(GetDevice(room, "H"))"></RadzenIcon>
                                                </RadzenColumn>
                                                <RadzenColumn Size="7">
                                                    <RadzenText Text="Humidity" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn>
                                                <RadzenColumn Size="4">
                                                    <RadzenText Text="@GetDevice(room, "H").Value" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn>
                                            </RadzenRow>
                                            <RadzenRow>
                                                <RadzenColumn Size="1">
                                                    <RadzenIcon Icon="fiber_manual_record" IconStyle="IconStyle.Primary" Style="display: grid; float: none; height: 16px; width: 16px" class="@GetState(GetDevice(room, "P"))"></RadzenIcon>
                                                </RadzenColumn>
                                                <RadzenColumn Size="7">
                                                    <RadzenText Text="Differential pressure" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn>
                                                <RadzenColumn Size="4">
                                                    <RadzenText Text="@GetDevice(room, "P").Value" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn>
                                            </RadzenRow>
                                        </RadzenColumn>
                                    </RadzenRow>
                                </RadzenCard>
                            </RadzenColumn>
                        }
                    }
                </RadzenRow>
            </RadzenPanel>
        </RadzenRow>
    </RadzenColumn>
</RadzenRow>