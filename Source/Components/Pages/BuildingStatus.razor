                                        </RadzenColumn>
                                        <RadzenColumn SizeLG="9">
                                            <RadzenRow RowGap="5" >
                                                <RadzenColumn Size="1">
                                                    <RadzenIcon Icon="fiber_manual_record" IconColor="#ffd800" IconStyle="IconStyle.Primary" Style="float: none; height: 16px; width: 16px; display: grid"></RadzenIcon>
                                                </RadzenColumn>
                                                <RadzenColumn Size="7">
                                                    <RadzenText Text="Temperature" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn >
                                                <RadzenColumn Size="4">
                                                    <RadzenText Text="20.3 Â°C" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn>
                                            </RadzenRow>
                                            <RadzenRow>
                                                <RadzenColumn Size="1">
                                                    <RadzenIcon Icon="fiber_manual_record" IconColor="#00AA00" IconStyle="IconStyle.Primary" Style="display: grid; float: none; height: 16px; width: 16px"></RadzenIcon>
                                                </RadzenColumn>
                                                <RadzenColumn Size="7">
                                                    <RadzenText Text="Humidity" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn>
                                                <RadzenColumn Size="4">
                                                    <RadzenText Text="42,7%" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn>
                                            </RadzenRow>
                                            <RadzenRow>
                                                <RadzenColumn Size="1">
                                                    <RadzenIcon Icon="fiber_manual_record" IconColor="#00AA00" IconStyle="IconStyle.Primary" Style="display: grid; float: none; height: 16px; width: 16px"></RadzenIcon>
                                                </RadzenColumn>
                                                <RadzenColumn Size="7">
                                                    <RadzenText Text="Differential pressure" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn>
                                                <RadzenColumn Size="4">
                                                    <RadzenText Text="45 Pa" TextStyle="TextStyle.Body2"></RadzenText>
                                                </RadzenColumn>
                                            </RadzenRow>
                                        </RadzenColumn>
                                    </RadzenRow>
                                </RadzenCard>
                            </RadzenColumn>
                        }
                    }
                </RadzenRow>
            </RadzenPanel>
        </RadzenRow>
    </RadzenColumn>
</RadzenRow>