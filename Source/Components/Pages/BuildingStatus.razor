    <RadzenColumn Size="12">
        <RadzenRow>
            <RadzenPanel Style="width: 100%">
                <RadzenRow Gap=10 RowGap="10">
                    @if (Building != null)
                    {
                        foreach (var room in Building.Rooms)
                        {
                            <RadzenColumn SizeSM="12" SizeMD="6" SizeLG="4">
                                <RadzenCard>
                                    <RadzenRow>
                                        <RadzenColumn SizeLG="3" Style="display: table; text-align: center">
                                        <RadzenIcon Icon="crop_3_2" Style="font-size: 48px; height: 48px; width: 48px; color: #990000"></RadzenIcon>
